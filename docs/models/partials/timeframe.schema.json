{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "schemas-json/models/partials/timeframe.schema.json",
    "title": "TimeFrame",
    "type": "object",
    "definitions": {
        "TimeFrameDate": {
            "oneOf": [
                {
                    "type": "string",
                    "format": "date-time"
                },
                {
                    "type": "number",
                    "const": -1
                }
            ]
        }
    },
    "properties": {
        "id": {
            "description": "уникальный идентификатор временного слота",
            "type": "string"
        },
        "start": {
            "description": "смещение в минутах от начала дня",
            "type": "number"
        },
        "end": {
            "description": "смещение в минутах от начала дня",
            "type": "number"
        },
        "resources": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "roomID": {
            "type": "string"
        },
        "capacity": {
            "type": "number"
        },
        "extraId": {
            "type": "string"
        },
        "startDate": {
            "$ref": "#/definitions/TimeFrameDate"
        },
        "endDate": {
            "$ref": "#/definitions/TimeFrameDate"
        }
    },
    "required": [
        "start",
        "end"
    ],
    "additionalProperties": false
}