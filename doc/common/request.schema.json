{
    "$id": "http://git.dev.gbooking.ru/corev2-schemata/schemas-json/common/request.schema.json",
    "title": "Request",
    "description": "json-rpc-2 запрос",
    "type": "object",
    "properties": {
        "jsonrpc": {
            "description": "версия протокола (2.0)",
            "type": "string",
            "const": "2.0"
        },
        "id": {
            "description": "значение числового типа для идентификации запроса на сервере",
            "type": "number"
        },
        "cred": {
            "description": "авторизационные параметры",
            "allOf": [
                {
                    "type": "object",
                    "params": [],
                    "required": [],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "user": {
                            "description": "идентификатор профиля пользователя",
                            "type": "string"
                        },
                        "token": {
                            "description": "временный token для доступа",
                            "type": "string"
                        }
                    },
                    "required": [
                        "user",
                        "token"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "method": {
            "description": "название json-rpc метода",
            "type": "string"
        },
        "params": {
            "description": "параметры запроса",
            "type": "object"
        }
    },
    "required": [
        "jsonrpc",
        "id",
        "result"
    ],
    "additionalProperties": false
}