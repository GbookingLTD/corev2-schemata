                "pageSize",
                "page"
            ],
            "properties": {
                "business": {
                    "type": "object",
                    "required": [
                        "id"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "id": {
                            "type": [
                                "string",
                                "number"
                            ]
                        }
                    }
                },
                "network": {
                    "type": "object",
                    "required": [],
                    "additionalProperties": false,
                    "properties": {
                        "id": {
                            "type": [
                                "string",
                                "number"
                            ]
                        }
                    }
                },
                "pageSize": {
                    "type": "number"
                },
                "page": {
                    "type": "number"
                },
                "extraFilters": {
                    "type": "object",
                    "required": [],
                    "additionalProperties": false,
                    "properties": {
                        "sort": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "dir",
                                    "field"
                                ],
                                "additionalProperties": false,
                                "properties": {
                                    "dir": {
                                        "type": "string",
                                        "enum": [
                                            "asc",
                                            "desc"
                                        ]
                                    },
                                    "field": {
                                        "type": "string",
                                        "enum": [
                                            "created",
                                            "start"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "skipBusinessCancelled": {
                    "type": "boolean",
                    "default": false
