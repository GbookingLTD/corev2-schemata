                "fill_business_data": {
                    "type": "boolean"
                },
                "filter": {
                    "type": "object",
                    "required": [],
                    "additionalProperties": false,
                    "properties": {
                        "start": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "end": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "created": {
                            "type": "object",
                            "required": [
                                "start",
                                "end"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "start": {
                                    "type": "string",
                                    "format": "date-time"
                                },
                                "end": {
                                    "type": "string",
                                    "format": "date-time"
                                }
                            }
                        },
                        "skipUpdated": {
                            "type": "boolean",
                            "default": false
                        },
                        "services": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "workers": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "contract": {
                    "type": "object",
                    "description": "данные по договору, если указано то будут переданы записи только по данному договору",
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "extraId": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "Request": {
            "type": "object",
            "required": [
                "params"
            ],
            "properties": {
                "params": {
                    "$ref": "#/definitions/Filters"
                }
            }
        }
    },
    "allOf": [
        {
